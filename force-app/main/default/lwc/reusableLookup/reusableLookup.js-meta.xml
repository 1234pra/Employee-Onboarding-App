<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Reusable Lookup</masterLabel>
    <description>Generic reusable lookup component for any object.</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage">
            <property name="objectName" type="String" label="Object Name (e.g. Account, Contact, Opportunity)" description="Enter the API name of the object to search."/>
            <property name="label" type="String" label="Label" description="Label for the search input."/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
